<table>
    <tr>
        <th></th>
        <th>Title</th>
        <th>Description</th>
        <th>Year</th>
    </tr>
    <% @books.each do |book| %>
        <tr>
            <td>
                <% if book.picture == nil %>
                    <img src="/blank.png">
                <% else %>
                    <img height="100" src="<%= book.picture.url %>">
                <% end %>
            </td>
            <td>
                <%= book.title %>
                <a href="/edit?id=<%= book.id %>">Edit</a>
            </td>
            <td><%= book.description %></td>
            <td><%= book.year %></td>
        </tr>
    <% end %>
</table>